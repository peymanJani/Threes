<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc_peyman.threes.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:gravity="center|right"
            android:layout_weight="0.3"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="90dip"
                android:layout_weight="0.3"
                android:layout_width="0dip"
                android:layout_marginRight="5dip"
                android:layout_marginLeft="10dip">

                <TextView
                    android:background="#9c9999"
                    android:text="Score"
                    android:textSize="25dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/score"
                    android:layout_weight="1.04"
                    android:textStyle="bold"
                    android:paddingTop="8dip"
                    android:padding="2dip"
                    android:paddingLeft="8dip"
                    android:textColor="@android:color/white"
                    android:gravity="top"
                    android:layout_marginLeft="3dip" />

                <TextView
                    android:background="#9c9999"
                    android:text="0"
                    android:layout_below="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/valueScore"
                    android:layout_weight="1"
                    android:foregroundGravity="center_horizontal|center"
                    android:textSize="25dip"
                    android:textStyle="bold"
                    android:padding="2dip"
                    android:paddingLeft="8dip"
                    android:textColor="@android:color/white"
                    android:gravity="top|left|center_horizontal"
                    android:layout_marginLeft="3dip" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="90dp"
                android:elevation="1dp"
                android:layout_weight="0.37"
                android:layout_width="0dip"
                android:gravity="top|center">

                <Button
                    android:layout_width="50dip"
                    android:layout_height="70dip"
                    android:id="@+id/next"
                    android:background="@drawable/btn" />

                <TextView
                    android:text="Next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="90dip"
                android:layout_weight="0.33"
                android:layout_width="0dip"
                android:paddingRight="18dip">

                <TextView
                    android:background="#9c9999"
                    android:text="Best"
                    android:textSize="25dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:paddingBottom="20dip"
                    android:padding="2dip"
                    android:paddingLeft="4dip"
                    android:paddingRight="8dip"
                    android:textColor="@android:color/white"
                    android:gravity="top"
                    android:layout_marginRight="3dip" />

                <TextView
                    android:background="#9c9999"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:text="0"
                    android:textSize="25dip"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bestValue"
                    android:layout_weight="1"
                    android:padding="2dip"
                    android:paddingLeft="4dip"
                    android:textColor="@android:color/white"
                    android:gravity="top|left|center_horizontal"
                    android:layout_marginRight="3dip"
                    />
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:background="#d0e6df"
            android:layout_weight="0.7">

            <com.example.pc_peyman.threes.GameView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/line1"
                android:layout_alignParentBottom="true"
                android:id="@+id/gameView"
                android:layout_marginBottom="4dp"></com.example.pc_peyman.threes.GameView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

            <Button
                android:text="RESET"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:layout_width="73dp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>


